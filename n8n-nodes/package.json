{
  "name": "n8n-nodes-sqlite-crud",
  "version": "1.0.0",
  "description": "n8n node para operaciones CRUD con SQLite",
  "keywords": [
    "n8n-community-node-package",
    "sqlite",
    "database",
    "crud"
  ],
  "license": "MIT",
  "homepage": "",
  "author": {
    "name": "",
    "email": ""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes --write",
    "lint": "eslint nodes package.json",
    "lintfix": "eslint nodes package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -s"
  },
  "files": [
    "dist"
