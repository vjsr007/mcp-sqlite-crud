    "nodes": [
      "dist/nodes/Sqlite/Sqlite.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "~5.45.0",
    "@types/node": "^18.16.16",
    "eslint-plugin-n8n-nodes-base": "~1.11.0",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "prettier": "^2.7.1",
    "typescript": "~4.8.4"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1"
  }
